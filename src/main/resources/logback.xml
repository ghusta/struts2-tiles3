<?xml version="1.0" encoding="UTF-8"?>
<configuration packagingData="true">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.opensymphony.xwork2.config" level="info" />
    <logger name="com.opensymphony.xwork2.ognl" level="info" />
    <logger name="com.opensymphony.xwork2.conversion.impl" level="info" />
    <logger name="org.apache.struts2.views.freemarker" level="info" />
    <logger name="org.apache.struts2.interceptor.I18nInterceptor" level="info" />

    <logger name="org.apache.commons.digester.Digester" level="info" />

    <root level="debug">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>